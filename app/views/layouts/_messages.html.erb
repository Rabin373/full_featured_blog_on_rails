<div class="row">
	<div class="col-xs-4 col-xs-offset-1">
		<% flash.each do |name,msg| %>
			<div class='alert alert-<%= "#{name}" %>' role="alert">
				<a href="#" class="close" data-dismiss="alert">
					<%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %></a>
			</div>
		<% end %>
	</div>
</div>